= form_for @tournament do |f|
  = f.label :name, "Enter a name"
  = f.text_field :name
  = f.label :name, "Which address?"
  = f.text_field :address
  = f.label :name, "How many players?"
  = f.number_field :max_player
  #gamecreat
    =render "gamecreat"
  %br
  .text-center
    = f.submit

%label "Another game?"
= simple_form_for(@game, remote: true) do |r|
  = r.input :title
  = r.input :description
  = r.input :photo
  = r.input :photo_cache, as: :hidden
  = r.submit

