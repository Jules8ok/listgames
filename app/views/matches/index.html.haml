.wrapper-grey.padded
  .container
    .row
      .col-sm-6.col-sm-offset-3.col-xs-10{:class => "col-xs-offset-0.5"}
        .text-center
          %h2 Matches
          - @matches.each do  |matche|
            .card0
              %h3
                = matche.score
              - if !matche.users.first.nil? && !matche.users.second.nil?
                %p
                  = matche.users.first.first_name
                  \- #{matche.users.second.first_name}
              - if !matche.game.nil?
                %p
                  = matche.game.title
              \/
              - if !matche.tournament.nil?
                = matche.tournament.name
              = link_to "See", match_path(matche)
