<%= form_for @tournament do |f| %>

<%= f.label :name, "Enter a name" %>
<%= f.text_field :name %>

<%= f.label :name, "Which address?" %>
<%= f.text_field :address %>

<%= f.label :name, "How many players?" %>
<%= f.number_field :max_player %>
<% @games = Game.all %>
<br><br>
<% @games.each do |game| %>
<%= f.label :name, game.title %>
<%= check_box_tag "games[]", game.id%>
<br>
<% end %>
<br><br>
<%= f.submit %>

<% end %>
