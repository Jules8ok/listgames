  .my-nav
    .navbar.navbar-default.navbar-fixed-top.scrollspy_menu.mnav.navbar__initial{:role => "navigation"}
      .container
        .navbar-header.mnav
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand.mnav{:href => "#"}
            %i.fa.fa-pied-piper-alt
            = succeed "ailsGame" do
              %span{:style => "color: #e63e30;"} R
            %i.fa.fa-pied-piper-pp
        .navbar-collapse.collapse
          %ul.fullpage__nav.nav.navbar-nav.navbar-right.mnav
            %li
              = link_to "Tournaments", tournaments_path
            %li= link_to "Users", users_path
            %li= link_to "Games", games_path
            %li= link_to "Matches", matches_path
            %li= link_to "Stats", pages_stat_path
            %li= link_to "Edit profil", edit_user_registration_path
            %li
              - if user_signed_in?
                = link_to destroy_user_session_path, method: :delete do
                  = t(".sign_out", default: "LOG OUT")
                  - avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30"
                  = image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown"
              - else
                = link_to new_user_session_path do
                  %button.nav-but.btn2= t(".sign_in", default: "LOGIN")
